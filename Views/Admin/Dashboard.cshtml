@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="report-container">
    <div class="page-title">
        <h1 class="glowing-text">Admin Dashboard</h1>
        <p class="subtitle">Manage reported issues and events</p>
    </div>

    <div class="neon-card">
        <form method="post" action="@Url.Action("Logout")" style="text-align: right; margin-bottom: 2rem;">
            <button type="submit" class="back-btn">Logout</button>
        </form>

        <h2>Reported Issues</h2>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        <table class="table table-dark">
            <thead>
            <tr>
                <th>ID</th>
                <th>Category</th>
                <th>Description</th>
                <th>Location</th>
                <th>Status</th>
                <th>Upvotes</th>
                <th>Downvotes</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var issue in ViewBag.Issues)
            {
                <tr>
                    <td>@issue.Id</td>
                    <td>@issue.Category</td>
                    <td>@issue.Description</td>
                    <td>@issue.Location</td>
                    <td>
                        <span class="badge @(issue.Status == "Approved" ? "bg-success" : issue.Status == "Rejected" ? "bg-danger" : issue.Status == "Deleted" ? "bg-secondary" : "bg-warning")">@issue.Status</span>
                    </td>
                    <td>@issue.Upvotes</td>
                    <td>@issue.Downvotes</td>
                    <td>@issue.ReportedDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (issue.Status == "Pending")
                        {
                            <button class="btn btn-sm btn-success me-1" onclick="showResponseModal(@issue.Id, 'approve')">Approve</button>
                            <button class="btn btn-sm btn-warning me-1" onclick="showResponseModal(@issue.Id, 'reject')">Reject</button>
                            <button class="btn btn-sm btn-danger" onclick="showResponseModal(@issue.Id, 'delete')">Delete</button>
                        }
                        else
                        {
                            <span class="text-muted">@issue.AdminResponse</span>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <!-- Response Modal -->
        <div class="modal fade" id="responseModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content bg-dark text-white">
                    <div class="modal-header">
                        <h5 class="modal-title" id="responseModalTitle">Respond to Issue</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <form id="responseForm" method="post">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="comments" class="form-label">Comments (Optional)</label>
                                <textarea class="form-control neon-input" id="comments" name="comments" rows="3" placeholder="Add any comments..."></textarea>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" id="responseSubmitBtn">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <h2 style="margin-top: 3rem;">Announcements</h2>
        <div style="margin-bottom: 1rem;">
            <a href="@Url.Action("CreateAnnouncement", "Admin")" class="btn btn-primary neon-button">Add New Announcement</a>
        </div>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        <table class="table table-dark">
            <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Priority</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var announcement in ViewBag.Announcements)
            {
                <tr>
                    <td>@announcement.Title</td>
                    <td>@announcement.Category</td>
                    <td>
                        @if (announcement.Priority == 3)
                        {
                            <span class="badge bg-danger">High</span>
                        }
                        else if (announcement.Priority == 2)
                        {
                            <span class="badge bg-warning">Medium</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Low</span>
                        }
                    </td>
                    <td>@announcement.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form method="post" action="@Url.Action("DeleteAnnouncement", "Admin")" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                            <input type="hidden" name="id" value="@announcement.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <h2 style="margin-top: 3rem;">Events</h2>
        <div style="margin-bottom: 1rem;">
            <a href="@Url.Action("CreateEvent", "Admin")" class="btn btn-primary neon-button">Add New Event</a>
        </div>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        <table class="table table-dark">
            <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Date</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var eventItem in ViewBag.Events)
            {
                <tr>
                    <td>@eventItem.Title</td>
                    <td>@eventItem.Category</td>
                    <td>@eventItem.EventDate.ToString("yyyy-MM-dd")</td>
                    <td>@eventItem.Location</td>
                    <td>
                        <a href="@Url.Action("EditEvent", "Admin", new { id = eventItem.Id })" class="btn btn-sm btn-outline-primary">Edit</a>
                        <form method="post" action="@Url.Action("DeleteEvent", "Admin")" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this event?');">
                            <input type="hidden" name="id" value="@eventItem.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

<script>
    let currentIssueId = null;
    let currentAction = null;

    function showResponseModal(issueId, action) {
        currentIssueId = issueId;
        currentAction = action;

        const modalTitle = document.getElementById('responseModalTitle');
        const submitBtn = document.getElementById('responseSubmitBtn');
        const form = document.getElementById('responseForm');

        // Set modal title and form action
        switch (action) {
            case 'approve':
                modalTitle.textContent = 'Approve Issue';
                submitBtn.textContent = 'Approve';
                submitBtn.className = 'btn btn-success';
                form.action = '@Url.Action("ApproveIssue", "Admin")';
                break;
            case 'reject':
                modalTitle.textContent = 'Reject Issue';
                submitBtn.textContent = 'Reject';
                submitBtn.className = 'btn btn-warning';
                form.action = '@Url.Action("RejectIssue", "Admin")';
                break;
            case 'delete':
                modalTitle.textContent = 'Delete Issue';
                submitBtn.textContent = 'Delete';
                submitBtn.className = 'btn btn-danger';
                form.action = '@Url.Action("DeleteIssue", "Admin")';
                break;
        }

        // Add hidden input for issueId
        let hiddenInput = form.querySelector('input[name="issueId"]');
        if (!hiddenInput) {
            hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'issueId';
            form.appendChild(hiddenInput);
        }
        hiddenInput.value = issueId;

        // Clear previous comments
        document.getElementById('comments').value = '';

        // Show modal
        new bootstrap.Modal(document.getElementById('responseModal')).show();
    }
</script>

